<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator_layout_rating"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Fragment.NotificationFragment">

    <RelativeLayout
        android:id="@+id/fra_rat_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundFrag">

        <LinearLayout
            android:id="@+id/fra_rat_lay_content"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical"
            android:background="@android:color/holo_green_dark">

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_rating"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fra_rat_lay_content"
            android:background="@drawable/card_edge"
            android:scrollbars="vertical" />

    </RelativeLayout>

</FrameLayout>