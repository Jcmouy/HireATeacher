<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/text_titleDialogConTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_filtro_levmod"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_subtitleDialogConTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_filtro_levmod"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_filtrotituloNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/filtro_nivel_titulo"
            android:layout_gravity="center"
            android:textColor="@color/test"
            android:fontFamily="assets/Roboto-Light.ttf"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_filtroPrimaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="@string/filtro_primaria"
            android:layout_gravity="center"
            android:textColor="@color/test"
            android:fontFamily="assets/Roboto-Light.ttf"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_filtroSecundaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filtro_secundaria"
            android:layout_gravity="center"
            android:textColor="@color/test"
            android:fontFamily="assets/Roboto-Light.ttf"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_filtroTerciaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filtro_terciaria"
            android:layout_gravity="center"
            android:textColor="@color/test"
            android:fontFamily="assets/Roboto-Light.ttf"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_filtroUniveristaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filtro_universitaria"
            android:layout_gravity="center"
            android:textColor="@color/test"
            android:fontFamily="assets/Roboto-Light.ttf"
            android:textSize="15sp"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.78"/>

        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/check_filtroPrimaria"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="7dp"
            android:layout_weight="0.5"
            app:color_checked="@color/colorAccent"
            app:color_tick="@android:color/white"
            app:color_unchecked_stroke="@color/colorAccent"
            app:small_tick="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:layout_weight="1.15"/>

        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/check_filtroSecundaria"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_weight="0.5"
            app:color_checked="@color/px_badge_success"
            app:color_tick="@android:color/white"
            app:color_unchecked_stroke="@color/px_badge_success"
            app:small_tick="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.15"/>

        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/check_filtroTerciaria"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="37dp"
            android:layout_weight="0.5"
            app:color_checked="@color/px_paymentMethodTint"
            app:color_tick="@android:color/white"
            app:color_unchecked_stroke="@color/px_paymentMethodTint"
            app:small_tick="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.15"/>

        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/check_filtroUniversitaria"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="37dp"
            android:layout_weight="0.5"
            app:color_checked="@color/design_default_color_primary"
            app:color_tick="@android:color/white"
            app:color_unchecked_stroke="@color/design_default_color_primary"
            app:small_tick="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.45"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_filtrotituloModalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/filtro_modalidad_titulo"
            android:layout_gravity="center"
            android:textColor="@color/test"
            android:fontFamily="assets/Roboto-Light.ttf"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_filtroOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="@string/filtro_online"
            android:layout_gravity="center"
            android:textColor="@color/test"
            android:fontFamily="assets/Roboto-Light.ttf"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_filtroPresencial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="@string/filtro_presencial"
            android:layout_gravity="center"
            android:textColor="@color/test"
            android:fontFamily="assets/Roboto-Light.ttf"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_filtroSemiPresencial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/filtro_semipresencial"
            android:layout_gravity="center"
            android:textColor="@color/test"
            android:fontFamily="assets/Roboto-Light.ttf"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_filtroDomicilio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:text="@string/filtro_domicilio"
            android:layout_gravity="center"
            android:textColor="@color/test"
            android:fontFamily="assets/Roboto-Light.ttf"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.78"/>

        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/check_filtroOnline"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="7dp"
            android:layout_weight="0.5"
            app:color_checked="@color/colorAccent"
            app:color_tick="@android:color/white"
            app:color_unchecked_stroke="@color/colorAccent"
            app:small_tick="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:layout_weight="1.15"/>

        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/check_filtroPresencial"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_weight="0.5"
            app:color_checked="@color/px_badge_success"
            app:color_tick="@android:color/white"
            app:color_unchecked_stroke="@color/px_badge_success"
            app:small_tick="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.15"/>

        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/check_filtroSemiPresencial"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="37dp"
            android:layout_weight="0.5"
            app:color_checked="@color/px_paymentMethodTint"
            app:color_tick="@android:color/white"
            app:color_unchecked_stroke="@color/px_paymentMethodTint"
            app:small_tick="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.15"/>

        <net.igenius.customcheckbox.CustomCheckBox
            android:id="@+id/check_filtroDomicilio"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="37dp"
            android:layout_weight="0.5"
            app:color_checked="@color/design_default_color_primary"
            app:color_tick="@android:color/white"
            app:color_unchecked_stroke="@color/design_default_color_primary"
            app:small_tick="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.45"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_filterCosto_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    android:text="@string/button_cancel_cont"/>

                <Button
                    android:id="@+id/button_filterCosto_accept"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:text="@string/button_set_filter"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>